<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @produto, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div class="columns">
          <div class="field column is-4">
            <div class="control">
              <label class="label">Tipo</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :tipo,required: true, collection: Produto::TIPO, prompt: "Selecione o tipo" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>
              </div>
            </div>
          </div>


          <div class="field column">
            <div class="control">
              <%= f.input :preço, required: true, input_html: { class:"input", maxlength: 7  }, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>

        </div>

        <div class="field">
          <div class="control">
            <%= f.input :descrição,hint: "Escreva aqui informações sobre o produto e como entrar em contato com a entidade", required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class="label">Adicionar imagem</label>
              <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input produto-image" }, label: false, wrapper: false %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Escolhar um arquivo…</span>
                  </span>
              </label>
              </div>
            </div>
          </div>
          <output id="list"></output>
        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
            <%= link_to 'Cancelar', produtos_path, class:'button is-light' %>
          </div>
        </div>

      </div>

      <% end %>
  </div>
</div>